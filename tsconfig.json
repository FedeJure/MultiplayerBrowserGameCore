{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "node_module/phaser/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "_build"
    ],
    "excludeFiles": [
      "build/fileWhichChangesOfent.ts"
    ]
  }
}